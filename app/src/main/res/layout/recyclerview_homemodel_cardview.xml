<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/c1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_150"
    android:layout_marginLeft="@dimen/height_2"
    android:layout_marginTop="@dimen/height_4"
    android:layout_marginRight="@dimen/height_2"
    android:layout_weight="1"
    android:background="@drawable/edit_text_frame"
    android:elevation="@dimen/height_4"
    android:orientation="vertical"
    ads:cardCornerRadius="@dimen/height_3"
    ads:cardElevation="@dimen/height_8"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:id="@+id/linerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/edit_text_frame"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_module_card"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_100"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space10"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_module_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_module_card"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/sf_ui_display_regular"
            android:padding="@dimen/height_4"
            android:text="@string/model_name"
            android:textAlignment="center"
            android:textColor="#0083B0"
            android:textSize="@dimen/height_16"
            android:textStyle="bold" />


    </RelativeLayout>

</android.support.v7.widget.CardView>